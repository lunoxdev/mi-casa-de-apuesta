    <!-- First Carousel -->
    <div
      class="flex flex-row overflow-x-hidden [--gap:1rem] [--duration:15s] mt-5 w-max animate-marquee items-stretch gap-[--gap] [animation-direction:reverse] hover:[animation-play-state:paused]"
    >
      {
        reviews.map((info) => (
          <a
            href={info.url}
            target="_blank"
            rel="external noopener noreferrer sponsored"
            class="flex flex-col justify-center items-center mx-auto h-44 w-48 space-y-4 rounded-xl border-2 border-slate-800 bg-gradient-to-t from-black/60 to-slate-950 px-8 py-16 group focus:outline-none"
