            <div class="flex flex-row justify-center items-center w-full">
              <img
                src="/others/star-rating.svg"
                alt="Icono star rating"
                title="Icono star rating"
                width="24"
                height="20"
                decoding="async"
                loading="lazy"
                class="w-6 h-5"
              />
