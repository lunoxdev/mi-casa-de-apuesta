const reviews = [
  {
    name: "BC Game",
    img: "/operators/nobg/bc-game.svg",
    rating: "4.1",
    url: "https://bc.game/i-lunoxvip-n/",
  },
  {
    name: "Sportsbet",
    img: "/operators/nobg/sportsbet.svg",
    rating: "4.5",
    url: "https://aff.partners.io/visit/?bta=43235&brand=sportsbetio",
  },
  {
    name: "BetWinner",
    img: "/operators/nobg/betwinner.svg",
    rating: "4.2",
    url: "https://bwredir.com/29y1?p=%2Fregistration%2F",
  },
  {
    name: "Rabona",
    img: "/operators/nobg/rabona.svg",
    rating: "4.7",
    url: "https://rbn.servclick1move.com/?mid=95157_714721",
  },
  {
    name: "FezBet",
    img: "/operators/nobg/fezbet.svg",
    rating: "4.8",
    url: "https://awbba.zetcasino.com/redirect.aspx?pid=1374329&bid=6781",
  },
  {
    name: "bet O bet",
    img: "/operators/nobg/betobet.svg",
    rating: "4.9",
    url: "https://go.betobet.online/visit/?bta=37769&nci=6499",
  },
  {
    name: "Stake",
    img: "/operators/nobg/stake.svg",
    rating: "4.0",
    url: "https://stake.com/?c=RmJRJH9W",
  },
];
---

<section
  class="my-40 flex flex-col max-w-screen-md w-full mx-auto space-y-10 text-[#f0f3ff] text-opacity-90"
>
  <h2
    class="text-center text-xl text-pretty tracking-tight sm:text-3xl font-bold mb-3"
  >
    <span
      class="tracking-tight animate-text-gradient bg-gradient-to-r from-[#c6c7ff] via-[#8678f9] to-[#eeefff] bg-[200%_auto] bg-clip-text text-transparent"
    >
      NUEVAS CASAS DE APUESTAS
    </span>
  </h2>
  <p class="text-pretty tracking-tight text-center">
    Sumérgete en el fascinante mundo de las apuestas en línea en Latinoamérica
    con las más recientes adiciones al mercado. Explora nuevas opciones
    emocionantes y frescas que están cambiando el panorama del juego en línea.
    Descubre tu próximo destino para las apuestas deportivas favoritas en el
    vibrante mercado latinoamericano.
  </p>
  <div class="flex flex-col relative h-52 w-full overflow-hidden">
    <!-- First Carousel -->
    <div class="flex w-full overflow-x-hidden [--gap:1rem] [--duration:15s]">
      <div
        class="flex w-max animate-marquee items-stretch gap-[--gap] [animation-direction:reverse] hover:[animation-play-state:paused]"
      >
        {
          reviews.map((info) => (
            <a
              {...info}
              href={info.url}
              target="_blank"
              rel="external noopener nofollow"
              class="flex h-48 w-48 rounded-xl border-t-2 border-slate-800 bg-gradient-to-t from-black/60 to-slate-950 px-8 py-16 group focus:outline-none focus:border-[#f0f3ff]"
            >
              <div class="flex flex-col h-auto items-center justify-center gap-5 transition group-hover:scale-110">
                <img
                  src={info.img}
                  width="120"
                  height="90"
                  loading="lazy"
                  alt={`Logo de ${info.name}, casa de apuestas deportivas en línea`}
                  title={`Logo de ${info.name}, casa de apuestas deportivas en línea`}
                  class="w-full h-full"
                />
                <div class="flex flex-row justify-center w-full items-end">
                  <StarRating w={"22"} h={"26"} />
                  <p>{info.rating}</p>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>

    <!-- Left Gradient -->
    <div
      class="absolute inset-y-0 left-0 w-20 pointer-events-none from-[#020617] to-transparent bg-gradient-to-r"
    >
    </div>

    <!-- Right Gradient -->
    <div
      class="absolute inset-y-0 right-0 w-20 pointer-events-none bg-gradient-to-l from-[#020617]"
    >
    </div>
  </div>
</section>
