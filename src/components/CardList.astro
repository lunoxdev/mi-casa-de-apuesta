---
import Card from "./Card.astro";
import { operators } from "../lib/data";
---

<section id="lista" class="flex flex-col my-16 sm:my-36 space-y-10 w-full p-4">
  <h2
    class="text-center text-xl text-pretty tracking-tight sm:text-3xl font-bold text-[#f0f3ff] text-opacity-80 mb-3"
  >
    MEJORES CASAS DE APUESTAS
  </h2>
  {
    operators.map((info) => (
      <article>
        <Card {...info} />
      </article>
    ))
  }
</section>
