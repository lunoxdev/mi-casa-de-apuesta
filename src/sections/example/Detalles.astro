---
import StarRating from "../../components/icons/StarRating.astro";
import { CountUp } from "../../components/reviews/CountUp";

const { ...info } = Astro.props;
---

<>
  <!-- Stadistics -->
  <section
    id="detalle"
    class="my-14 flex flex-col w-full mx-auto space-y-12 text-[#f0f3ff] text-opacity-90"
  >
    <h1
      class="inline-flex mx-auto uppercase animate-background-shine bg-[linear-gradient(110deg,#939393,45%,#f0f3ff,65%,#939393)] bg-[length:250%_100%] bg-clip-text text-transparent text-4xl sm:text-6xl font-semibold"
    >
      {info.name}
    </h1>
    <div
      class="flex flex-wrap sm:flex-nowrap w-full justify-center items-center sm:divide-x-2 mx-auto h-auto space-y-5 sm:space-y-0 py-10 px-5 border gap-5 rounded-xl border-t-2 border-slate-800 bg-gradient-to-t from-black/60 to-slate-950 focus:outline-none focus:border-[#f0f3ff]"
    >
      <div class="flex flex-col grow w-full items-center text-pretty space-y-3">
        <CountUp client:visible initial={0} final={70000} />
        <p class="text-lg sm:text-xl text-center font-light tracking-tight">
          Jugadores activos
        </p>
      </div>
      <div
        class="flex flex-col grow w-1/4 sm:w-full items-center pl-5 text-balance space-y-3"
      >
        <CountUp client:visible initial={0} final={62} showPlusSign={false} />
        <p class="text-lg sm:text-xl text-center font-light tracking-tight">
          Países en cobertura
        </p>
      </div>
      <div
        class="flex flex-col grow w-1/4 sm:w-full items-center pl-5 text-pretty space-y-3"
      >
        <CountUp client:visible initial={0} final={49} showPlusSign={false} />
        <p class="text-lg sm:text-xl text-center font-light tracking-tight">
          Idiomas soportados
        </p>
      </div>
      <div
        class="flex flex-col grow w-1/4 sm:w-full items-center pl-5 text-pretty space-y-3"
      >
        <CountUp client:visible initial={0} final={160} />
        <p class="text-lg sm:text-xl text-center font-light tracking-tight">
          Métodos de pago
        </p>
      </div>
    </div>

    <!-- Apps -->
    <div class="flex flex-row justify-center items-center flex-wrap">
      {
        info.apps.map(
          (app: {
            android: string | null | undefined;
            ios: string | null | undefined;
            webapp: string | null | undefined;
            nameandroid: string | null | undefined;
            nameios: string | null | undefined;
            nameweb: string | null | undefined;
          }) => (
            <div class="flex flex-row justify-start items-center gap-2">
              {app.android && (
                <img src={app.android} alt="Android" width="16" height="16" />
                <p>{app.nameandroid}</p>
              )}
              {app.ios && (
                <img src={app.ios} alt="iOS" width="16" height="16" />
                <p>{app.nameios}</p>
              )}
              {app.webapp && (
                <img src={app.webapp} alt="WebApp" width="16" height="16" />
                <p>{app.nameweb}</p>
              )}
            </div>
          )
        )
      }
    </div>

    <!-- Why choose this Operator? -->
    <section
      class="my-14 flex flex-col w-full space-y-2 text-[#f0f3ff] text-opacity-90"
    >
      <div class="flex flex-row justify-start items-end w-full gap-2">
        <h2
          class="uppercase text-xl text-pretty tracking-tight font-bold text-[#f0f3ff] text-opacity-90"
        >
          ¿Por qué elegir {info.name}?
        </h2>
        <div class="flex flex-row justify-center items-end">
          <StarRating w={"22"} h={"26"} />
          <p class="text-end">{info.rating}</p>
        </div>
      </div>
      <p class="text-pretty tracking-tight font-light">
        Si te gusta el deporte, seguro has notado la presencia destacada de
