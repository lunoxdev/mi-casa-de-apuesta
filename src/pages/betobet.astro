---
import Layout from "../layout/Layout.astro";
import { operators } from "../lib/data";
import HeaderReview from "../components/reviews/HeaderReview";
import Detalles from "../components/sections/betobet/Detalles.astro";
import Promociones from "../components/sections/betobet/Promociones.astro";
import Pagos from "../components/sections/betobet/Pagos.astro";
import Deportes from "../components/sections/betobet/Deportes.astro";
import Soporte from "../components/sections/betobet/Soporte.astro";

const operator = operators.find((operator) => operator.pageName === "betobet")!;
if (!operator) return Astro.redirect("/404");

const { ...info } = operator;

const title = `Casa de apuesta ${info.name}`;
const description = `${info.name}, apuestas deportivas, casino y eSports en línea seguras, confiables y emocionante. ¡Vive la emoción del juego y apuesta como un PRO!`;
const canonicalUrl = "https://micasadeapuesta.com/betobet/";
---

<Layout title={title} description={description} canonicalUrl={canonicalUrl}>
  <>
    <!-- Header Review -->
    <HeaderReview {...info} client:load />

    <!-- Content -->
    <main class="max-w-screen-lg px-4">
      <Detalles {...info} />
      <Promociones {...info} />
      <Pagos {...info} />
      <Deportes {...info} />
    </main>

    <!-- Footer -->
    <footer class="max-w-screen-lg px-4">
      <Soporte {...info} />
    </footer>
  </>
</Layout>
