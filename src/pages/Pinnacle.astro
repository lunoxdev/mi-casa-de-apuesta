---
import Layout from "../layout/Layout.astro";
import { operators } from "../lib/data";
import HeaderReview from "../components/reviews/HeaderReview";
import Detalles from "../components/operators/pinnacle/Detalles.astro";
import Promociones from "../components/operators/pinnacle/Promociones.astro";
import Pagos from "../components/operators/pinnacle/Pagos.astro";
import Deportes from "../components/operators/pinnacle/Deportes.astro";
import Soporte from "../components/operators/pinnacle/Soporte.astro";

const operator = operators.find(
  (operator) => operator.pageName === "pinnacle"
)!;
if (!operator) return Astro.redirect("/404");

const { ...info } = operator;

const title = `Rese√±a de la casa de apuestas ${info.name}`;
const description = `${info.name}, la casa de apuesta pionera en esports con cuotas competitivas, amplia variedad de deportes y mercados, y plataforma segura.`;
const canonicalUrl = "https://micasadeapuesta.com/pinnacle/";
---

<Layout title={title} description={description} canonicalUrl={canonicalUrl}>
  <>
    <!-- Header Review -->
    <HeaderReview {...info} client:load />

    <!-- Content -->
    <main class="max-w-screen-lg px-4">
      <Detalles {...info} />
      <Promociones {...info} />
      <Pagos {...info} />
      <Deportes {...info} />
    </main>

    <!-- Footer -->
    <footer class="max-w-screen-lg px-4">
      <Soporte {...info} />
    </footer>
  </>
</Layout>
