---
import Layout from "../layout/Layout.astro";
import { operators } from "../lib/data";
import HeaderReview from "../components/reviews/HeaderReview";
import Detalles from "../components/sections/pinnacle/Detalles.astro";
import Promociones from "../components/sections/pinnacle/Promociones.astro";
import Pagos from "../components/sections/pinnacle/Pagos.astro";
import Deportes from "../components/sections/pinnacle/Deportes.astro";
import Soporte from "../components/sections/pinnacle/Soporte.astro";

const operator = operators.find((operator) => operator.name === "Pinnacle")!;
if (!operator) return Astro.redirect("/404");

const { ...info } = operator;

const title = `Casa de apuesta ${info.name}`;
const description = `${info.name}, la casa de apuesta pionera en esports con cuotas competitivas, amplia variedad de deportes y mercados, y plataforma segura.`;
---

<Layout title={title} description={description}>
  <>
    <!-- Header Review -->
    <HeaderReview {...info} client:load />

    <!-- Content -->
    <main class="max-w-screen-lg px-4">
      <Detalles {...info} />
      <Promociones {...info} />
      <Pagos {...info} />
      <Deportes {...info} />
    </main>

    <!-- Footer -->
    <footer class="max-w-screen-lg px-4">
      <Soporte {...info} />
    </footer>
  </>
</Layout>
