---
import Layout from "../layout/Layout.astro";
import { operators } from "../lib/data";
import HeaderReview from "../components/reviews/HeaderReview";
import Detalles from "../components/sections/rabona/Detalles.astro";
import Promociones from "../components/sections/rabona/Promociones.astro";
import Pagos from "../components/sections/rabona/Pagos.astro";
import Deportes from "../components/sections/rabona/Deportes.astro";
import Soporte from "../components/sections/rabona/Soporte.astro";

const operator = operators.find((operator) => operator.name === "Rabona")!;
if (!operator) return Astro.redirect("/404");

const { ...info } = operator;

const title = `Casa de apuesta ${info.name}`;
const description = `${info.name}, casa de apuestas con dise√±o atractivo, seguridad garantizada, amplia variedad de deportes y promociones innovadoras.`;
---

<Layout title={title} description={description}>
  <>
    <!-- Header Review -->
    <HeaderReview {...info} client:load />

    <!-- Content -->
    <main class="max-w-screen-lg px-4">
      <Detalles {...info} />
      <Promociones {...info} />
      <Pagos {...info} />
      <Deportes {...info} />
    </main>

    <!-- Footer -->
    <footer class="max-w-screen-lg px-4">
      <Soporte {...info} />
    </footer>
  </>
</Layout>
